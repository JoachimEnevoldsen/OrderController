@model OrderController.Models.users
@{
    ViewBag.Title = "Login";
}

<div class="jumbotron login">
    <div class="m-lg-auto"> </div>
    <h1 class="text-center">Login</h1>

    @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
    {
        <div class="row">

            <div class="col-12 col-sm-6">
                @Html.LabelFor(model => model.name)
                @Html.EditorFor(model => model.name)
                @Html.ValidationMessageFor(model => model.name)
            </div>
            <div class="col-12 col-sm-6">
                @Html.LabelFor(model => model.password)
                @Html.EditorFor(model => model.password)
                @Html.ValidationMessageFor(model => model.password)
            </div>
            <div class="col-12 text-center">
                <button type="submit" class=" w-50 btn btn-success">Login</button>


            </div>
            <div class="text-center col-12">
                <label class="text-danger w-50">@Html.DisplayFor(model => model.LoginErrorMessage)</label>

            </div>
        </div>
    }
</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
